@{
    ViewData["Title"] = "Firebase Home Page";
    @model Firebase_a.Models.ResponseResult;
}

<div class="text-center">
    <h5 class="display-5">Let's list our data from Firebase</h5>

    <div class="row">
        <div class="col-md-6">
            <h3>Users</h3>
            <a class="btn btn-primary" asp-controller="Firebase" asp-action="User">Add User</a>
            <div class="list-group">
               @if(@Model.users!=null)
               {
                    @foreach (var user in @Model.users.OrderBy(a=>a.Value.firstName))
                    {
                        <a href="/Firebase/User/@user.Key" data-itemid='@user.Key' class="list-group-item">@(user.Value.firstName + " " + user.Value.lastName)
                        </a>
                     }
                }
            </div>

        </div>

            <div class="col-md-6">
            <h3>Brands</h3>
            <a class="btn btn-primary" asp-controller="Firebase" asp-action="Brand">Add Brand</a>
            <ul class="list-group">
               @if(@Model.brands!=null)
               {
                    @foreach (var brand in @Model.brands.OrderBy(a=>a.Value.name))
                    {
                        <a href="/Firebase/Brand/@brand.Key" data-itemid='@brand.Key'  class="list-group-item">@(brand.Value.name + " (" + brand.Value.website+")")</a>
                    } 
               }
            </ul>
        </div>
    </div>
</div>
